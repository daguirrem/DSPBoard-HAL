					"PRJ_NAME=${config:name_project}",
					"EXT_LIB_PATH=${config:path_lib}",
					/*Config*/
					"HSE_VALUE=${config:mcu_hse_frecuency}",
					"FPU_HARDWARE=${config:mcu_fpu_hardware}",
					/*Other*/
					"XPACK=${config:path_xpack_windows}",
					"BMP_COMMAND=${config:path_sdk}/bmp/blackmagic.exe",
					"ST_COMMAND=${config:path_sdk}/utils/openocd/0.11.0-3/x64/bin/openocd.exe",
					"PROGRAMMER=${config:programmer}"
				]
			},
			"linux":{
				"command": "make",
			},
			"osx":{
				"command": "make",
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"type": "shell",
			"label": "importInclude",
			"args": [
				"incl_imp",
				/*Build*/
				"EXT_LIB_PATH=${config:path_lib}",
			],
			"windows": {
				"command": "${config:path_xpack_windows}/make.exe",
				"args": [
					"incl_imp",
					/*Build*/
					"EXT_LIB_PATH=${config:path_lib}",
					/*Other*/
