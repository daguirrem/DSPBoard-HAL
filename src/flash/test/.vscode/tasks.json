				]
			},
			"linux":{
				"command": "make",
			},
			"osx":{
				"command": "make",
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"type": "shell",
			"label": "size",
			"command": "${config:path_powershell}",
			"windows":{
				"args": [   
					"-ExecutionPolicy",
					"Unrestricted",
					"-NoProfile",
					"-File",
					"${config:path_sdk}/utils/size.ps1",
					"${config:path_toolchain}/bin/arm-none-eabi-size.exe",
					"${workspaceFolder}/output/${command:cpptools.activeConfigName}/${config:name_project}.elf",
					"512", /*Flash size */
					"128", /*RAM size */
					"64",  /*CCM size */
					"4",   /*BKP size */
				],
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": ["build"],
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"type": "shell",
			"label": "reference manual",
			"windows":{
				"command": "& '${config:path_sdk}/docs/stm32f407_reference_manual.pdf'",
			},
